{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "module": "preserve",
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": [
      "types"
    ],
    "incremental": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "*/**/*.ts",
    "*/**/*.tsx",
    "*/**/*.mdx",
    ".next/types/**/*.ts"
  ]
}
